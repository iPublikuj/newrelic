{
	"name"			: "ipub/newrelic",
	"type"			: "library",
	"description"	: "System logger for New Relic service for Nette framework",
	"keywords"		: ["nette", "newrelic", "ipub", "ipublikuj"],
	"homepage"		: "https://github.com/iPublikuj/newrelic",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support":{
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/newrelic/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"newRelic" : "IPub\\NewRelic\\DI\\NewRelicExtension"
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.0.0",

		"nette/application"	: "~2.3",
		"nette/http"		: "~2.3",
		"nette/di"			: "~2.3",

		"tracy/tracy"	: "~2.3",

		"pds/skeleton"	: "@dev"
	},

	"require-dev": {
		"nette/tester"	: "@dev"
	},

	"autoload": {
		"psr-0": {
			"IPub\\NewRelic\\": "src/"
		}
	}
}
